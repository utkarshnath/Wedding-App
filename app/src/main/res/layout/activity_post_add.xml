
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:cardview="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:fab="http://schemas.android.com/tools"
        cardview:cardElevation="2dp"
        cardview:cardMaxElevation="2dp"
        android:id="@+id/cv"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        cardview:contentPadding="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        cardview:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:id="@+id/uploaderdp"/>
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/uploaderdp"
                android:id="@+id/frame1"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/uploaderName"
                    android:paddingTop="7dp"
                    android:textColor="@color/black"
                    android:paddingLeft="12dp"
                    android:text="Name"
                    />
            </FrameLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/add_description"
                android:background="@color/grey_100"
                android:layout_below="@+id/frame1"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="16sp"
                android:padding="5dp"
                android:gravity="left|top"
                android:textColorHint="@color/black"
                android:hint="Say something about the Picture!"
                />
            <ImageView
                android:layout_width="360dp"
                android:layout_height="360dp"
                android:id="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/event_type_spinner"/>
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/event_type_spinner"
                android:layout_below="@+id/add_description"
                android:layout_alignLeft="@+id/imageView"
                android:layout_alignStart="@+id/imageView" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
