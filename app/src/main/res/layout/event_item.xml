<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="5dp"
    android:elevation="5dp"

    android:id="@+id/event_cardView">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/event_relativeView"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Haldi"
                android:paddingLeft="5dp"
                android:textStyle="bold"
                android:textColor="#fff"

                android:id="@+id/event_name"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#fff"
            android:paddingLeft="5dp"
            android:text="Exposition hall"
            android:layout_below="@+id/event_date"
            android:id="@+id/event_venue"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:paddingLeft="5dp"
            android:textColor="#fff"
            android:textSize="15dp"
            android:id="@+id/event_date"
            android:layout_below="@+id/event_name"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text=" july"
            android:textColor="#fff"
            android:id="@+id/event_month"
            android:layout_below="@+id/event_name"
            android:layout_toRightOf="@id/event_date"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textSize="15dp"
            android:textColor="#fff"
            android:text=" 7:30 pm"
            android:layout_below="@+id/event_name"
            android:layout_toRightOf="@+id/event_month"
            android:id="@+id/event_Time"/>

       <FrameLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/event_venue">
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="130dp"

               android:id="@+id/event_Photo"
                />
       </FrameLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>




